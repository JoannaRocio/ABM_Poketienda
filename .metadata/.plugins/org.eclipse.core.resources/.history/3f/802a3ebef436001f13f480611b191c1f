package repositories.interfaces;

import java.io.IOException;
import java.util.List;

import models.Cliente;

public interface ClienteRepo {

	public List<Cliente> getAll() throws IOException;
	
	public Cliente findById(int id) throws IOException;
	
	public Cliente findByUsername(String username, String pass) throws IOException;
	
	public void insert(Cliente cliente) throws IOException;
	
	public void update(Cliente cliente) throws IOException;
	
	public void delete(int id) throws IOException;
}
